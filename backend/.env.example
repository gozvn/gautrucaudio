# Application Configuration
APP_ENV=development
APP_NAME=Novel App
APP_FRONTEND_URL=http://localhost:4200
APP_SSL_ACTIVE=false
APP_SSL_PORT=443
APP_SSL_KEY_PATH=
APP_SSL_CERT_PATH=
APP_TEMPLATE=default
PREFIX_PATH=/api/v1/
# Application Modules
APP_MODULES=
APP_MODULES_ECO_DATA_HUB=

# Google Configuration
GOOGLE_RECAPTCHA_ACTIVE=false
GOOGLE_RECAPTCHA_URL=https://www.google.com/recaptcha/api/siteverify
GOOGLE_RECAPTCHA_V3_SECRET_KEY=your_recaptcha_secret_key
GOOGLE_EMAIL_EXTENSIONS=gmail.com,googlemail.com

# Notification Configuration
NOTIFICATION_ENABLE=false
NOTIFICATION_CHAT_ID=your_telegram_chat_id
NOTIFICATION_TOKEN=your_telegram_bot_token

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=novel_db

# MySQL Eco Data Hub Configuration
MYSQL_ECO_DATA_HUB_HOST=localhost
MYSQL_ECO_DATA_HUB_PORT=3306
MYSQL_ECO_DATA_HUB_USER=your_mysql_username
MYSQL_ECO_DATA_HUB_PASSWORD=your_mysql_password
MYSQL_ECO_DATA_HUB_DATABASE=eco_data_hub

# Redis Configuration
REDIS_CACHE_HOST=localhost
REDIS_CACHE_PORT=6379
REDIS_CACHE_AUTH=your_redis_password
REDIS_CACHE_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_at_least_32_characters
JWT_ALGORITHM=HS256
JWT_TTL=2592000
JWT_SECRET_REFRESH=your_jwt_refresh_secret_key_here_at_least_32_characters
JWT_ALGORITHM_REFRESH=HS256

# Authentication Configuration
AUTH_BASIC_USERNAME=admin
AUTH_BASIC_PASSWORD=your_basic_auth_password

# Encryption Configuration
ENCRYPT_ALGORITHM=aes-256-ctr
ENCRYPT_SECRET_KEY=your_encryption_secret_key_32_characters_long

# API Keys Configuration
AUTH_DATA_API_KEY_NAME=x-data-api-key
AUTH_WEBHOOK_API_KEY_VALUE=your_webhook_api_key_here
AUTH_WEBHOOK_API_KEY_NAME=x-webhook-api-key

# Email Configuration
EMAIL_TYPE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME=Novel App
EMAIL_CC=cc1@example.com,cc2@example.com
EMAIL_BCC=bcc1@example.com,bcc2@example.com

# Web RSA Configuration
WEB_RSA_IS_ACTIVE=false
WEB_RSA_PRIVATE_KEY=your_private_key_here
WEB_RSA_PUBLIC_KEY=your_public_key_here

# Google OAuth Configuration
GOOGLE_APP_CLIENT_ID=your_google_oauth_client_id
GOOGLE_APP_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Request Logging
ENABLE_LOG_REQUEST=false